{
      "extends": "@react-native/typescript-config",
      "include": ["**/*.ts", "**/*.tsx"],
      "exclude": ["**/node_modules", "**/Pods"],
      "compilerOptions": {
            "jsx": "react",
            "baseUrl": "src",
            "paths": {
                  "types": ["definitions/type/index"],
                  "interfaces": ["definitions/interface/index"],
                  "enums": ["definitions/enum/index"],
                  "screens": ["screens/index"],
                  "inheritances": ["components/inheritance/index"],
                  "global": ["global/index"],
                  "styles": ["styles/index"],
                  "buttons": ["components/button/index"],
                  "flatlists": ["components/flatlist/index"],
                  "cards": ["components/card/index"]
            }
      }
}
